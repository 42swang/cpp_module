NAME = ex02

CXX = c++

CXXFLAGS = -Wall -Wextra -Werror -std=c++98

SRCS = main.cpp\
	Bureaucrat.cpp\
	Form.cpp\
	ShrubberyCreationForm.cpp\
	PresidentialPardonForm.cpp\
	RobotomyRequestForm.cpp

OBJS = ${SRCS:.cpp=.o}

.cpp.o :
	${CXX} ${CXXFALGS} -c $< -o $@

all : ${NAME}

${NAME} : ${OBJS}
		${CXX} ${CXXFLAGS} ${OBJS} -o ${NAME}

clean : 
		rm -rf ${OBJS}

fclean : clean
	rm -rf ${NAME}

re : fclean all

.PHONY : all clean fclean re